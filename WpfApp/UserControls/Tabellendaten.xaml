<UserControl x:Class="WpfApp.Tabellendaten"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp"
             mc:Ignorable="d">
    <UserControl.CommandBindings>
        <CommandBinding Command="Delete" 
                  CanExecute="Delete_CanExecute"
                  Executed="Delete_Executed" />
    </UserControl.CommandBindings>
    <Grid x:Name="grdMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="370*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <DataGrid IsReadOnly="True" SelectionMode="Single" CanUserAddRows="False" SelectionChanged="dgTabelle_SelectionChanged" x:Name="dgTabelle" Grid.Row="0" MinWidth="1000" MinHeight="370" Margin="0,0,0,0" VerticalAlignment="Top" />
        <Button Command="ApplicationCommands.Delete" CommandTarget="{Binding ElementName=grdMain}" x:Name="btnLoeschen" Width="75" Height="20" Grid.Row="1" Content="Löschen" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,5,5" Click="btnLoeschen_Click" />
    </Grid>
</UserControl>
