<UserControl x:Class="DMS_Adminitration.UebersichtTabellen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DMS_Adminitration"
             mc:Ignorable="d" 
             d:DesignWidth="200" Background="White">

    <Grid x:Name="grdMain" Background="White" MaxWidth="200" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label x:Name="lblHeader" Content="Angelegte Tabellen" FontSize="16" Grid.Row="0"  />
        <TreeView x:Name="tvMain" BorderBrush="White" Grid.Row="1" Margin="0,0,0,0" Width="200" VerticalAlignment="Top" />
    </Grid>

</UserControl>
