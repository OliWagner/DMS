<UserControl x:Class="DMS_Adminitration.AendernTabelle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DMS_Adminitration"
        mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblTabName" FontSize="16" Grid.Row="0" Margin="5,0,0,0" />
        <ScrollViewer Grid.Row="0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Grid x:Name="grdMain" Grid.Row="1" />
        </ScrollViewer>
        <Button x:Name="btnOk" Width="70" Grid.Row="1" FontSize="12" Content="Speichern" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="btnHinzu" Width="100" Grid.Row="1" FontSize="12" Content="Feld hinzufügen" Margin="205,5,0,5" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="btnAbbrechen" Width="70" Grid.Row="1" FontSize="12" Content="Abbrechen" Margin="85,5,0,5" HorizontalAlignment="Left" VerticalAlignment="Center"/>
     </Grid>
</UserControl>
