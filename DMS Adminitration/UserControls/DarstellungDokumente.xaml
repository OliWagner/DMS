<UserControl x:Class="DMS_Adminitration.DarstellungDokumente"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DMS_Adminitration"
             mc:Ignorable="d" 
             >
    
    <Grid x:Name="grdContainer" HorizontalAlignment="Left" VerticalAlignment="Top" >
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="500*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Height="60">
            <local:Suchfelder x:Name="suchfelder" IsEnabled="True" Margin="0,0,0,0" />
        </Grid>
        <Grid Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" MinHeight="500" Background="White">
            <ScrollViewer VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,0" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <DataGrid x:Name="dgDokumente" SelectionChanged="dgDokumente_SelectionChanged" 
                          BorderThickness="0" Background="White" Margin="0,0,0,0" AutoGeneratingColumn="OnAutoGeneratingColumn" 
                          AutoGeneratedColumns="dgDokumente_AutoGeneratedColumns" IsReadOnly="True" SelectionMode="Single" 
                          CanUserAddRows="False" VerticalAlignment="Top" HorizontalAlignment="Left" />
                
            </ScrollViewer>
            <DataGrid Grid.Row="1" IsReadOnly="True" x:Name="dgTabelleOriginal" Visibility="Visible" />
        </Grid>
        <DataGrid Grid.Row="1" x:Name="dgDokumente2" BorderThickness="0" Background="White" Margin="0,0,0,0" AutoGeneratingColumn="OnAutoGeneratingColumn" AutoGeneratedColumns="dgDokumente_AutoGeneratedColumns" IsReadOnly="True" SelectionMode="Single" CanUserAddRows="False" VerticalAlignment="Top" HorizontalAlignment="Left" Visibility="Hidden" />

    </Grid>
    
</UserControl>
